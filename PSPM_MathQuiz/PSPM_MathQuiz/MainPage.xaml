<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PSPM_MathQuiz.MainPage"
             Title="MathQuiz">

    <StackLayout BackgroundColor="LightBlue">
        <StackLayout x:Name="startGameView" IsVisible="false">
            <Frame BackgroundColor="White" WidthRequest="220" HorizontalOptions="Center" CornerRadius="25" Padding="10" Margin="0,50,0,20">
                <Entry x:Name="txtUserName" Placeholder="Nick" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
            </Frame>
            <Button x:Name="startGameButton" Text="Rozpocznij grę" BackgroundColor="LightSkyBlue" TextColor="White" TextTransform="None" WidthRequest="220" HorizontalOptions="Center" CornerRadius="20"/>
            <Button x:Name="playAgainButton" Text="Ranking" BackgroundColor="LightSkyBlue" TextColor="White" TextTransform="None" WidthRequest="150" FontSize="17" HorizontalOptions="Center" CornerRadius="20"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
